<odoo>
    <record id="view_users_form_inherit_purchase_visibility" model="ir.ui.view">
        <field name="name">res.users.form.inherit.purchase.visibility</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_user']" position="inside">
                <group name="purchase_visibility">
                    <field name="groups_id" widget="many2many_tags" domain="[('id', '=', ref('purchase_visibility.group_purchase_additional_visibility'))]"/>
                    <field name="additional_visible_users" attrs="{'invisible': [('groups_id', 'not in', [ref('purchase_visibility.group_purchase_additional_visibility')])]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
