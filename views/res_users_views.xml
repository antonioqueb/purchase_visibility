<odoo>
    <record id="view_users_form_inherit_purchase_visibility" model="ir.ui.view">
        <field name="name">res.users.form.inherit.purchase.visibility</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook" position="inside">
                <group string="Purchase Visibility">
                    <field name="groups_id" widget="many2many_tags"
                        domain="[('category_id', '=', env.ref('base.module_category_purchases').id)]"/>
                    <field name="additional_visible_users" 
                        invisible="not user.has_group('purchase_visibility.group_purchase_additional_visibility')"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
