<odoo>
    <!-- Definir un nuevo grupo para usuarios con visibilidad restringida -->
    <record id="group_purchase_own_orders" model="res.groups">
        <field name="name">Purchase Own Orders</field>
        <field name="category_id" ref="base.module_category_purchases"/>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <!-- Regla de registros para Ã“rdenes de Compra -->
    <record id="purchase_order_own_rule" model="ir.rule">
        <field name="name">Purchase Order Own</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('purchase_visibility.group_purchase_own_orders'))]"/>
    </record>

    <!-- Regla de registros para Solicitudes de Compra -->
    <record id="purchase_requisition_own_rule" model="ir.rule">
        <field name="name">Purchase Requisition Own</field>
        <field name="model_id" ref="purchase_requisition.model_purchase_requisition"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('purchase_visibility.group_purchase_own_orders'))]"/>
    </record>
</odoo>
